<h2>詳細</h2>

<table border="1">
  <tr>
    <th>No</th>
    <td><%= @public_user.id %></td>
  </tr>

  <tr>
    <th>ユーザ名</th>
    <td><%= @public_user.name %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @public_user.email %></td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= @public_user.telephone_number %></td>
  </tr>

  <tr>
    <th>ステータス</th>
    <td>
      <% if @public_user.is_active? %>
        有効
      <% else %>
        退会済み
      <% end %>
    </td>
  </tr>

</table>






