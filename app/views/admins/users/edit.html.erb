<%= render 'layouts/title', title: "一般ユーザ編集" %>

<section class="page">
  <%= form_with model: @user, url: admins_user_path(@user.id), local:true do |f| %>
    <ul class="info-list">
      <div class="row">
        <div class="input-label col-sm-12 col-lg-3"><%= f.label :name, "ユーザ名" %></div>
        <div class="input-field col-sm-12 col-lg-8 offset-lg-1"><%= f.text_field :name %></div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="input-field col-sm-12 col-lg-8 offset-lg-1"><%= f.email_field :email %></div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3"><%= f.label :telephone_number, "電話番号" %></div>
        <div class="input-field col-sm-12 col-lg-8 offset-lg-1"><%= f.text_field :telephone_number %></div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3"></div>
        <div class="input-field col-sm-12 col-lg-8 offset-lg-1">
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "退会済み" %>
          <%= f.radio_button :is_active, false %>
        </div>
      </div>
      <div class="admin_change"><%= f.submit "変更" %></div>
    </div>

  <% end %>

</section>

