
<%= render 'layouts/title', title: "一般ユーザ詳細" %>

<section class="page">
<table border="1">
  <tr>
    <th>No</th>
    <td><%= @user.id %></td>
  </tr>

  <tr>
    <th>ユーザ名</th>
    <td><%= @user.name %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= @user.telephone_number %></td>
  </tr>

  <tr>
    <th>ステータス</th>
    <td>
      <% if @user.is_active? %>
        有効
      <% else %>
        退会済み
      <% end %>
    </td>
  </tr>

</table>

<%= link_to "登録情報編集", edit_admins_user_path(@user.id) %>

</section>




