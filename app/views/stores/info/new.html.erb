<h2>出店情報登録</h2>


<form>
  <input type="text" size="40" id="station">

  <input type="button" value="検索" onclick="OnButtonClick();">
</form>

<div id="St_name"></div>
<div id="no_data"></div>




<%= form_with model: @info, url: stores_info_index_path, local: true do |f| %>

  <%= f.hidden_field :station, :value => "", :id => "station_name" %>

  <%= f.label :place, "出店場所(詳細)" %>
  <%= f.text_field :place %>

  <%= f.label :start_period, "開始日" %>
  <%= f.date_field :start_period %>

  <%= f.label :end_period, "終了日" %>
  <%= f.date_field :end_period %>

  <%= f.label :open_time, "オープン時間" %>
  <%= f.time_field :open_time %>

  <%= f.label :close_time, "クローズ時間" %>
  <%= f.time_field :close_time %>

  <%= f.submit "出店情報登録" %>
<% end %>