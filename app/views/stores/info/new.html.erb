<%= render 'layouts/title', title: "出店情報追加" %>

<section class="page">

  <%= form_with model: @info, url: stores_info_index_path, local: true do |f| %>
    <ul class="input-list">

      <li class="input">
          <div class="input-label"><%= f.label :station, "駅名" %></div>
          <div class="input-field">
            <%= f.text_field :station, :value => "", :id => "station_name" %></br>

            <input type="button" value="検索" onclick="OnButtonClick()">
            <div id="St_name">必ず検索後に登録をお願いします</div>
          </div>
      </li>

      <li class="input">
        <div class="input-label"><%= f.label :place, "出店場所(詳細)" %></div>
        <div class="input-field"><%= f.text_field :place %></div>
      </li>

      <li class="input">
        <div class="input-label"><%= f.label :start_period, "開始日" %></div>
        <div class="input-field"><%= f.date_field :start_period %></div>
      </li>

      <li class="input">
        <div class="input-label"><%= f.label :end_period, "終了日" %></div>
        <div class="input-field"><%= f.date_field :end_period %></div>
      </li>

      <li class="input">
        <div class="input-label"><%= f.label :open_time, "オープン時間" %></div>
        <div class="input-field"><%= f.time_field :open_time, :value => "10:00" %></div>
      </li>

      <li class="input">
        <div class="input-label"><%= f.label :close_time, "クローズ時間" %></div>
        <div class="input-field"><%= f.time_field :close_time, :value => "20:00" %></div>
      </li>
    </ul>

    <div class="register_button"><%= f.submit "登録" %></div>
  <% end %>

</section>