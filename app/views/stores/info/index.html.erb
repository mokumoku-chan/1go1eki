<%= render 'layouts/title', title: "TOPページ" %>

<section class="page">

    <%= month_calendar do |date| %>
        <%= date.day %></br>
        <% @infos_all.each do |all| %>
            <% if date == all.start_period.to_date %>
                <%= link_to all.station, stores_info_path(all.id) %>
            <% end %>

            <% if (date >= all.start_period.to_date) and (date <= all.end_period.to_date) %>
                <div class="period_bar"></div>
            <% end %>
        <% end %>
    <% end %>

    <%= link_to "追加", new_stores_info_path %>

    <% @infos.each do |info| %>
        <ol class="shop-info">
            <li class="info">
                <div class="period">
                    <%= info.start_period %> ~
                    <%= info.end_period %>
                </div>
                <div class="station"><%= info.station %>駅</div>
                <div class="detail"><%= link_to "詳細", stores_info_path(info.id) %></div>
            </li>
        </ol>
    <% end %>

</section>

