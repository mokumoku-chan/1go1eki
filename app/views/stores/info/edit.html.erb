<%= render 'layouts/title', title: "編集ページ" %>

<section class="page">

  <%= form_with model: @info, url: stores_info_path(@info.id), local: true do |f| %>
    <div class="info-list">
      <div class="row">
        <div class="input-label col-sm-12 col-lg-3 offset-lg-1"><%= f.label :station, "駅名" %></div>
        <div class="input-field input-field col-sm-12 col-lg-8">
          <%= f.text_field :station, :id => "station_name" %>

          <input type="button" value="検索" onclick="OnButtonClick();">
          <div id="St_name"></div>
        </div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3 offset-lg-1"><%= f.label :place, "出店場所(詳細)" %></div>
        <div class="input-field col-sm-12 col-lg-8"><%= f.text_field :place %></div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3 offset-lg-1"><%= f.label :start_period, "開始日 " %> <i class="far fa-calendar"></i></div>
        <div class="input-field col-sm-12 col-lg-4"><%= f.date_field :start_period, value: @info.start_period %></div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3 offset-lg-1"><%= f.label :end_period, "終了日 " %></div>
        <div class="input-field col-sm-12 col-lg-4"><%= f.date_field :end_period, value: @info.end_period %></div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3 offset-lg-1"><%= f.label :open_time, "開店時間 " %><i class="far fa-clock"></i></div>
        <div class="input-field col-sm-12 col-lg-4"><%= f.time_field :open_time, value: @info.open_time %></div>
      </div>

      <div class="row">
        <div class="input-label col-sm-12 col-lg-3 offset-lg-1"><%= f.label :close_time, "閉店時間" %></div>
        <div class="input-field col-sm-12 col-lg-4"><%= f.time_field :close_time, value: @info.close_time %></div>
      </div>
    </div>

    <div class="item_change"><%= f.submit "変更" %></div>
  <% end %>

  <div class="destination"><%= link_to "詳細に戻る", stores_info_path(@info.id) %></div>

</section>