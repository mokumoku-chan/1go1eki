<% items.each do |item| %>

  <div class="row">
    <div class="item_img store_image col-sm-6 col-lg-3">
      <%= attachment_image_tag item, :image, fallback: "noimage.png", class: "img-fluid" %>
    </div>
    <div class="item_info col-sm-12 col-lg-8 offset-lg-1">
      <div class="info-list">
        <div class="row">
          <div class="info-title col-sm-12 col-lg-3">アイテム名</div>
          <div class="info-contents col-sm-12 col-lg-7 offset-lg-1"><%= item.name %></div>
        </div>

        <div class="row">
          <div class="info-title col-sm-12 col-lg-3">アイテム紹介</div>
          <div class="info-contents col-sm-12 col-lg-7 offset-lg-1"><%= item.comment %></div>
        </div>

        <div class="row">
          <div class="info-title col-sm-12 col-lg-3">金額</div>
          <div class="info-contents col-sm-12 col-lg-7 offset-lg-1">￥<%= item.price %> (税抜き)</div>
        </div>
      </div>
    </div>
  </div>

  <div class="short-line_image"></div>
<% end %>