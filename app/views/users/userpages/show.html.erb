<%= render 'layouts/title', title: "Mypage" %>

<section class="page">
  <div class="row">
    <div class="profile_image col-sm-6 col-lg-3">
      <h4>プロフィール画像</h4>
      <%= attachment_image_tag @user, :profile_image, fallback: "noimage.png", class: "img-fluid"%>
    </div>

    <div class="profile_info col-sm-12 col-lg-8 offset-lg-1">
      <h4>基本情報</h4>
      <div class="info-list">
        <div class="row">
          <div class="info-title col-sm-12 col-lg-3">ユーザ名</div>
          <div class="info-contents col-sm-12 col-lg-8 offset-lg-1"><%= @user.name %></div>
        </div>

        <div class="row">
          <div class="info-title col-sm-12 col-lg-3">メールアドレス</div>
          <div class="info-contents col-sm-12 col-lg-8 offset-lg-1"><%= @user.email %></div>
        </div>

        <div class="row">
          <div class="info-title col-sm-12 col-lg-3">電話番号</div>
          <div class="info-contents col-sm-12 col-lg-8 offset-lg-1"><%= @user.telephone_number %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="often_use col-sm-12 col-lg-8 offset-lg-4">
      <h4>よく使う駅  <i class="fas fa-subway"></i></h4>
      <% @stations.each do |station| %>
        <ul class="station-list">
          <li class="station-name"><%= station.name %></li>
        </ul>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="favorite col-sm-12 col-lg-8 offset-lg-4">
      <h4>お気に入りストア <%= image_tag 'heart_on.png', id: "heart_on" %></h4>
      <% @favorites.each do |favorite| %>
        <ul class="favorite-list">
          <% store = Store.find(favorite.store_id) %>
          <li class="favorite-store"><%= link_to store.name, users_storepage_path(store.id) %></li>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="destination"><%= link_to "編集ページ 行", users_mypage_edit_path %></div>
  <div class="destination"><%= link_to "退会", users_confirm_unsubscribe_path %></div>


</section>