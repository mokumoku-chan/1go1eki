<%= render 'layouts/title', title: "Mypage" %>

<section class="page">
  <div class="profile">
    <div class="profile_image">
      <h4>プロフィール画像</h4>
      <%= attachment_image_tag @user, :profile_image, fallback: "noimage.png"%>
    </div>

    <div class="profile_info">
      <h4>基本情報</h4>
      <ul class="info-list">
        <li class="info">
          <div class="info-title">ユーザ名</div>
          <div class="info-contents"><%= @user.name %></div>
        </li>

        <li class="info">
          <div class="info-title">メールアドレス</div>
          <div class="info-contents"><%= @user.email %></div>
        </li>

        <li class="info">
          <div class="info-title">電話番号</div>
          <div class="info-contents"><%= @user.telephone_number %></div>
        </li>
      </ul>
    </div>
  </div>

  <div class="often_use">
    <h4>よく使う駅  <i class="fas fa-subway"></i></h4>
    <% @stations.each do |station| %>
      <ul class="station-list">
        <li class="station-name"><%= station.name %></li>
      </ul>
    <% end %>
  </div>

  <div class="favorite">
    <h4>お気に入りストア <i class="fas fa-heart"></i></h4>
    <% @favorites.each do |favorite| %>
      <ul class="favorite-list">
        <% store = Store.find(favorite.store_id) %>
        <li class="favorite-store"><%= link_to store.name, users_storepage_path(store.id) %></li>
      </ul>
    <% end %>
  </div>


  <%= link_to "編集ページ 行", users_mypage_edit_path %>
  <%= link_to "退会", users_mypage_path %>

</section>